{{#if resume.projects.length}}
<div class="container volunteer-container">
    {{> title value=resume.titles.projects}}

    {{#each resume.projects}}
    <section class="item">
        {{> section-header name=this.name }}
        {{#if description}}
        <p class="summary">{{description}}</p>
        {{/if}}

        {{#if highlights.length}}
        <ul>
            {{#each highlights}}
            <li>{{.}}</li>
            {{/each}}
        </ul>
        {{/if}}
    </section>
    {{/each}}
</div>
{{/if}}